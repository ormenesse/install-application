apiVersion: apps/v1
kind: Deployment
metadata:
    name: install-app
    labels:
      app : install-app
spec:
  selector:
    matchLabels:
      app: install-app
  template:
    metadata:
      labels:
        app: install-app
    spec:
      containers:
      - image: {containerPath}/install-app:latest
        imagePullPolicy: Always
        name: install-app
        resources:
          limits:
            cpu: "1"
            memory: "512Mi"
          requests:
            cpu: "0.1"
            memory: "128Mi"
        name: install-app
        envFrom:
          - secretRef:
              name: ds-secrets
---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: install-app-hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: install-app
  minReplicas: 1
  maxReplicas: 3
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 30
      policies:
      - type: Pods
        value: 1
        periodSeconds: 15
    scaleDown:
      stabilizationWindowSeconds: 30
      policies:
      - type: Pods
        value: 1
        periodSeconds: 15
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 80
---
apiVersion: v1
kind: Service
metadata:
  name: install-service
  namespace: default
  labels:
    app:  install-app
spec:
  type: ClusterIP
  selector:
    app:  install-app
  ports:
  - protocol: TCP
    #name: 
    port: 80
    targetPort: 80